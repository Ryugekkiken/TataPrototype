<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:gravity="center"
    android:padding="8dp"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/click_area"
      android:layout_width="wrap_content"
      android:layout_height="match_parent">

       <ImageView
           android:id="@+id/file_icon"
           android:layout_width="92dp"
           android:layout_height="92dp"
           android:src="@drawable/ic_baseline_insert_drive_file_24"
           android:importantForAccessibility="no"
           app:layout_constraintStart_toStartOf="@id/doc_name"
           app:layout_constraintBottom_toTopOf="@id/doc_name"
           app:layout_constraintEnd_toEndOf="@id/doc_name"/>

       <TextView
           android:id="@+id/doc_name"
           android:layout_width="120dp"
           android:layout_height="wrap_content"
           android:text="@string/test_string"
           android:gravity="center"
           android:textColor="@color/black"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@id/file_icon"/>

  </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>